<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/head-meta', {name: "Bar Charts"}); %>
    
    <link rel="stylesheet" href="assets/style.css" />

    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
    />
  </head>

  <body>
    <%- include('components/navbar'); %>

    <!-- Main Body -->
    <div class="container">

      <div class="row gx-3 gy-5 py-4">
        
        <!-- Chart 1 -->
        <div class="col-8">
          <div id="stacked" style="height: 480px; padding-bottom: 75px"></div>
        </div>

        <!-- Legend for Chart 1 -->
        <div class="col-4 d-flex flex-column justify-content-center">
          <h3>Levelised cost of heat [â‚¬/MWh]</h3>
          <p id="value-lcoh-0" class="fw-light my-1">---</p>
          <% for (let index = labelsArrayLCOH1.length - 1; index >= 0; index--) { %>
          <div class="d-flex align-items-center">
            <div <%- `style="width: 15px; height: 15px; display: inline-block;background-color: ${colorsLCOH1[index]};"` %>></div>
            <span class="flex-grow-1 px-2"><%= labelsArrayLCOH1[index] %>:</span> 
            <span id=<%=`value-lcoh-${index+1}`%>>0</span>
          </div>
          <% }; %>
        </div>

      </div>


      <div class="row gx-3 gy-5 py-4">
        
        <!-- Chart 2 -->
        <div class="col-8">
          <div id="stacked2" style="height: 480px; padding-bottom: 75px"></div>
        </div>

        <!-- Legend for Chart 2 -->
        <div class="col-4 d-flex flex-column justify-content-center">
          <h3>Primary energy and CO2 emission factors</h3>
          <p id="value-lcoh2-0" class="fw-light my-1">---</p>
          <% labelsArrayLCOH2.forEach((label, index) => { %>
          <div class="d-flex align-items-center">
            <div <%- `style="width: 15px; height: 15px; display: inline-block;background-color: ${colorsLCOH2[index]};"` %>></div>
            <span class="flex-grow-1 px-2"><%= label %>:</span> 
            <span id=<%=`value-lcoh2-${index+1}`%>>0</span>
          </div>
          <% }); %>
        </div>

      </div>  


    </div>
    
    <%- include('components/footer'); %>

    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
    ></script>

    <script src="assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
    <script src="assets/node_modules/raphael/raphael-min.js"></script>
    <script src="assets/node_modules/morrisjs/morris.min.js"></script>
    <script src="assets/node_modules/jquery-sparkline/jquery.sparkline.min.js"></script>
    
    <script src="js/dashboard1.js"></script>
    <script src="js/dashboard2.js"></script>
  </body>
</html>
