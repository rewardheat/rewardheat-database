<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/head-meta', {name: "Calc Data"}); %>

    <link rel="stylesheet" href="/assets/style.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
    />
  </head>

  <body>
    <%- include('components/navbar'); %>

    <div class="container py-5">
      <h3>District Heating System Database</h3>

      <table id="data" class="table table-striped">
        <thead>
          <tr>
            <% for (let index = 0; index < calcData.length-5; index++) { %>
            <th><%= calcData[index][0] %></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% for (let j = 1; j < calcData[0].length; j++) { %>
          <tr>
            <% for (let i = 0; i < calcData.length-5; i++) { %>
            <td>
              <a style="text-decoration: none;color: black;" href="getcalcdatadetails/<%=j%>"><%= calcData[i][j] %></a>
            </td>
            <%};%>
          </tr>
          <% }; %>
        </tbody>
      </table>
    </div>

    <%- include('components/footer'); %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"
    ></script>
    <script>
      $(document).ready(function () {
        $("#data").DataTable();
      });
    </script>
  </body>
</html>
